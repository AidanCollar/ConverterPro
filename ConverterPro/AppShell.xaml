<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConverterPro.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConverterPro.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Distance">
            <ShellContent
                Title="DistancePage"
                ContentTemplate="{DataTemplate local:DistancePage}"
                Route="DistancePage" />
        </Tab>
        <Tab Title="Weight">
            <ShellContent
                Title="WeightPage"
                ContentTemplate="{DataTemplate local:WeightPage}"
                Route="WeightPage" />
        </Tab>
  
    </TabBar>
</Shell>
